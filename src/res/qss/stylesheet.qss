/******************************************************************************
** control 	: QScrollBar
** note		: 
******************************************************************************/

QScrollBar:vertical {
	background: rgb(0, 0, 0);
	width: 16px;
}

QScrollBar::handle:vertical {
	background: gray;
	width: 16px;
	border-radius: 8px;
	min-height: 10px;
}

QScrollBar:horizontal {
	background: rgb(240, 240, 240);
	height: 16px;
}

QScrollBar::handle:horizontal {
	background: gray;
	height: 16px;
	border-radius: 8px;
	min-width: 10px;
}


/******************************************************************************
** control 	: QTreeview
** note		: 
******************************************************************************/

QTreeview {
	background-color: white;
}

QTreeview::item {
	background-color: white;
}

QTreeview::item:selected {
	color: black;
	background-color: rgb(131, 160, 204);
}

QTreeView::indicator {
	width: 15px;
	height: 15px;
	image: url(:/Image/check-box-2.png);
}

QTreeView::indicator::checked {
	image: url(:/Image/check-box-1.png);
}


/******************************************************************************
